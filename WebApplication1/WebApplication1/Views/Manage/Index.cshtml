@model IEnumerable<WebApplication1.Models.BangSanPham>

@{
    ViewBag.Title = "Index";
}

<h2>Danh Sách Sản Phẩm</h2>

<p>
    @Html.ActionLink("Thêm Sản Phẩm", "Create")
</p>
<table id="DanhSachSanPham" class="table table-bordered table-condensed table-hover table-responsive table-striped" >
    <thead>
        <tr>
            <th>Mã Sản Phẩm</th>
            <th>Tên Sản Phẩm</th>
            <th>Giá Bán</th>
            <th> Giá Gốc</th>
            <th>Giá Trả Góp</th>
            <th>Số Lượng Tồn Kho</th>
            <th>Tên Loại</th>
            <th>Hình ảnh</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaSP</td>
                <td> @item.TenSP</td>
                <td> @item.GiaBan.ToString("N0")</td>
                <td> @item.GiaGoc.ToString("N0")</td>
                <td>@item.GiaGop.ToString("N0")</td>
                <td>@item.SoLuongTon</td>
                <td> @item.LoaiSanPham.TenLoai</td>
                <td>
                    <img src="@Url.Action("Details"),new{id = item.id})" width="70" height="70" />
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.id })">
                        <span class="btn btn-primary glyphicon glyphicon-pencil"></span>
                        </a>
                    
                   
                    <a class="pull-right"  href="@Url.Action("Delete", new { id = item.id })">
                        <span class="btn btn-danger glyphicon glyphicon-trash"></span>
                    </a>
                </td>
            </tr>

        }
    </tbody>
</table>
@section Scripts{
    <link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#DanhSachSanPham').DataTable();
        });
    </script>
}